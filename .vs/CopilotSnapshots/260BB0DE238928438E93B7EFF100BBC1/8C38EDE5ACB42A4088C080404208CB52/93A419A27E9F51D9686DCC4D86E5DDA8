@* // hàm này search theo FE, 

    <!-- JavaScript for filtering and search -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const statusFilter = document.getElementById('statusFilter');
        const methodFilter = document.getElementById('methodFilter');
        const typeFilter = document.getElementById('typeFilter');
        const tableRows = document.querySelectorAll('#paymentsTable tbody tr');

        function filterTable() {
            const searchTerm = searchInput.value.toLowerCase();
            const statusValue = statusFilter.value.toLowerCase();
            const methodValue = methodFilter.value.toLowerCase();
            const typeValue = typeFilter.value;

            tableRows.forEach(row => {
                const cells = row.querySelectorAll('td');
                if (cells.length >= 5) {
                    const transactionId = cells[4].textContent.toLowerCase();
                    const status = cells[3].textContent.toLowerCase();
                    const method = cells[2].textContent.toLowerCase();
                    const isDeposit = cells[5].textContent.toLowerCase().includes('deposit');

                    const matchesSearch = transactionId.includes(searchTerm);
                    const matchesStatus = !statusValue || status.includes(statusValue);
                    const matchesMethod = !methodValue || method.includes(methodValue);
                    const matchesType = !typeValue ||
                                      (typeValue === 'true' && isDeposit) ||
                                      (typeValue === 'false' && !isDeposit);

                    if (matchesSearch && matchesStatus && matchesMethod && matchesType) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                }
            });
        }

        searchInput.addEventListener('input', filterTable);
        statusFilter.addEventListener('change', filterTable);
        methodFilter.addEventListener('change', filterTable);
        typeFilter.addEventListener('change', filterTable);
    });
</script> *@

