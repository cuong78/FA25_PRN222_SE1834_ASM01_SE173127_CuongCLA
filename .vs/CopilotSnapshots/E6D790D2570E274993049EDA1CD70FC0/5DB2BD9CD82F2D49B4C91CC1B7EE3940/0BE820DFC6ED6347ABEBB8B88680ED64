<!-- JavaScript for enhanced UX -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Auto-set payment date to today if not already set
        const paymentDateInput = document.querySelector('input[name="PaymentCuongCla.PaymentDate"]');
        if (paymentDateInput && !paymentDateInput.value) {
            const today = new Date();
            const formattedDate = today.toISOString().split('T')[0];
            paymentDateInput.value = formattedDate;
        }

        // Show/hide deposit return amount based on IsDeposit checkbox
        const isDepositCheckbox = document.querySelector('input[name="PaymentCuongCla.IsDeposit"]');
        const depositReturnGroup = document.querySelector('input[name="PaymentCuongCla.DepositReturnAmount"]').closest('.form-group');

        function toggleDepositReturn() {
            if (isDepositCheckbox.checked) {
                depositReturnGroup.style.display = 'block';
            } else {
                depositReturnGroup.style.display = 'none';
                depositReturnGroup.querySelector('input').value = '';
            }
        }

        isDepositCheckbox.addEventListener('change', toggleDepositReturn);
        toggleDepositReturn(); // Initial state

        // Form validation enhancement
        const form = document.getElementById('paymentForm');
        form.addEventListener('submit', function(e) {
            const requiredFields = form.querySelectorAll('[required]');
            let hasErrors = false;

            requiredFields.forEach(field => {
                if (!field.value.trim()) {
                    field.style.borderColor = '#dc3545';
                    hasErrors = true;
                } else {
                    field.style.borderColor = '#28a745';
                }
            });

            if (hasErrors) {
                e.preventDefault();
                // Scroll to first error
                const firstError = form.querySelector('input[style*="border-color: rgb(220, 53, 69)"], select[style*="border-color: rgb(220, 53, 69)"]');
                if (firstError) {
                    firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    firstError.focus();
                }
            }
        });

        // Real-time validation
        const inputs = form.querySelectorAll('input, select, textarea');
        inputs.forEach(input => {
            input.addEventListener('blur', function() {
                if (this.hasAttribute('required') && !this.value.trim()) {
                    this.style.borderColor = '#dc3545';
                } else {
                    this.style.borderColor = '#e9ecef';
                }
            });

            input.addEventListener('input', function() {
                if (this.style.borderColor === 'rgb(220, 53, 69)' && this.value.trim()) {
                    this.style.borderColor = '#e9ecef';
                }
            });
        });
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}