<!-- JavaScript for enhanced UX -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('paymentEditForm');
        const originalValues = new Map();
        let hasUnsavedChanges = false;

        // Remove the class that hides validation errors when form is submitted or validation is triggered
        form.addEventListener('submit', function() {
            form.classList.remove('form-not-submitted');
        });

        // Store original values
        const inputs = form.querySelectorAll('input, select, textarea');
        inputs.forEach(input => {
            if (input.type === 'checkbox') {
                originalValues.set(input.name, input.checked);
            } else {
                originalValues.set(input.name, input.value);
            }
        });

        // Track changes
        inputs.forEach(input => {
            input.addEventListener('input', function() {
                let currentValue = this.type === 'checkbox' ? this.checked : this.value;
                let originalValue = originalValues.get(this.name);

                if (currentValue !== originalValue) {
                    this.classList.add('modified');
                    hasUnsavedChanges = true;
                } else {
                    this.classList.remove('modified');
                }

                // Check if any field is still modified
                hasUnsavedChanges = Array.from(inputs).some(inp => inp.classList.contains('modified'));
            });
        });

        // Show/hide deposit return amount based on IsDeposit checkbox
        const isDepositCheckbox = document.querySelector('input[name="PaymentCuongCla.IsDeposit"]');
        const depositReturnGroup = document.querySelector('input[name="PaymentCuongCla.DepositReturnAmount"]').closest('.form-group');

        function toggleDepositReturn() {
            if (isDepositCheckbox.checked) {
                depositReturnGroup.style.display = 'block';
            } else {
                depositReturnGroup.style.display = 'none';
            }
        }

        isDepositCheckbox.addEventListener('change', toggleDepositReturn);
        toggleDepositReturn(); // Initial state

        // Warn before leaving with unsaved changes
        window.addEventListener('beforeunload', function(e) {
            if (hasUnsavedChanges) {
                e.preventDefault();
                e.returnValue = 'You have unsaved changes. Are you sure you want to leave?';
                return e.returnValue;
            }
        });

        // Form submission
        form.addEventListener('submit', function(e) {
            let hasErrors = false;
            
            // Check required fields when form is submitted
            const bookingSelect = document.querySelector('select[name="PaymentCuongCla.BookingId"]');
            const processedBySelect = document.querySelector('select[name="PaymentCuongCla.ProcessedBy"]');
            const amountInput = document.querySelector('input[name="PaymentCuongCla.Amount"]');
            const paymentMethodSelect = document.querySelector('select[name="PaymentCuongCla.PaymentMethod"]');
            const paymentStatusSelect = document.querySelector('select[name="PaymentCuongCla.PaymentStatus"]');

            // Validate required fields
            if (!bookingSelect.value) {
                showFieldError(bookingSelect, 'Please select a booking');
                hasErrors = true;
            } else {
                clearFieldError(bookingSelect);
            }

            if (!processedBySelect.value) {
                showFieldError(processedBySelect, 'Please select who is processing this payment');
                hasErrors = true;
            } else {
                clearFieldError(processedBySelect);
            }

            if (!amountInput.value || parseFloat(amountInput.value) <= 0) {
                showFieldError(amountInput, 'Please enter a valid amount greater than 0');
                hasErrors = true;
            } else {
                clearFieldError(amountInput);
            }

            if (!paymentMethodSelect.value) {
                showFieldError(paymentMethodSelect, 'Please select a payment method');
                hasErrors = true;
            } else {
                clearFieldError(paymentMethodSelect);
            }

            if (!paymentStatusSelect.value) {
                showFieldError(paymentStatusSelect, 'Please select a payment status');
                hasErrors = true;
            } else {
                clearFieldError(paymentStatusSelect);
            }

            if (hasErrors) {
                e.preventDefault();
                form.classList.remove('form-not-submitted'); // Show validation errors
                // Scroll to first error
                const firstError = form.querySelector('.text-danger:not([style*="display: none"])');
                if (firstError) {
                    firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }
            } else {
                hasUnsavedChanges = false; // Prevent warning on successful form submit
            }
        });

        function showFieldError(field, message) {
            field.style.borderColor = '#dc3545';
            const errorSpan = field.closest('.form-group').querySelector('.text-danger');
            if (errorSpan) {
                errorSpan.textContent = message;
                errorSpan.style.display = 'flex';
            }
        }

        function clearFieldError(field) {
            field.style.borderColor = '#e9ecef';
            const errorSpan = field.closest('.form-group').querySelector('.text-danger');
            if (errorSpan) {
                errorSpan.style.display = 'none';
            }
        }

        // Real-time validation clearing
        inputs.forEach(input => {
            input.addEventListener('change', function() {
                if (this.style.borderColor === 'rgb(220, 53, 69)') {
                    clearFieldError(this);
                }
            });

            input.addEventListener('input', function() {
                if (this.style.borderColor === 'rgb(220, 53, 69)') {
                    clearFieldError(this);
                }
            });
        });

        // Reset form function
        window.resetForm = function() {
            if (confirm('Are you sure you want to discard all changes?')) {
                inputs.forEach(input => {
                    if (input.type === 'checkbox') {
                        input.checked = originalValues.get(input.name);
                    } else {
                        input.value = originalValues.get(input.name);
                    }
                    input.classList.remove('modified');
                    input.style.borderColor = '#e9ecef';
                    clearFieldError(input);
                });
                hasUnsavedChanges = false;
                form.classList.add('form-not-submitted'); // Hide validation errors again
            }
        };
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}